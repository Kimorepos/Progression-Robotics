<?xml version="1.0" encoding="utf-8"?>
<Patch> 
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biotech</li>
    </mods>
    <match Class="PatchOperationSequence">
	    <operations>
    <li Class="PatchOperationReplace">
        <xpath>Defs/ResearchProjectDef[defName="VFE_HardwareUpgrade"]/label</xpath>
        <value>
            <label>advanced combat mechs</label>
        </value>
    </li>
    <li Class="PatchOperationReplace">
        <xpath>Defs/ResearchProjectDef[defName="VFE_HardwareUpgrade"]/description</xpath>
        <value>
            <description>Researching upgraded combat mechs allows you to build advanced versions of several standard combat mechanoids.</description>
        </value>
    </li>
		</operations>
		</match>
	</Operation>
</Patch>